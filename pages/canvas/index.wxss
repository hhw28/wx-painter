#app{
  width: 100vw;
  height: 100vh;
  position: relative;
}
.panels{
  position: absolute;
  bottom: 20rpx;
}
.actions{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-bottom: 35rpx;
}
.actions .iconfont{
  display: inline-block;
  width: 1.8rem;
  height: 1.8rem;
  font-size: 1.8rem;
  transition:0.3s;
}
.iconfont.active{
  color: red;
  transform: scale(1.2);
}
.palette{
  background: rgba(0,0,0,.5);
  border-radius: 7px;
  padding: 5px;
}
.palette-btn{
  display: inline-block;
  width: 20px;
  height: 20px;
  border-radius: 5px;
  cursor: pointer;
  margin: 3px;
  margin-bottom:-1px;
  transition:0.3s;
  z-index: 100;
}
.palette-btn>radio{
  display: none;
}
.active{
  transform: scale(1.2);
}



@font-face {
  font-family: 'iconfont';
  src: url(data:font/truetype;charset=utf-8;base64,) format('truetype');
  font-weight: normal;
  font-style: normal;
}
.iconfont {
  font-family:"iconfont" !important;
  font-size:16px;
  font-style:normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
.icon-delete:before { content: "\e61b"; }
.icon-download:before { content: "\e620"; }
.icon-eraser:before { content: "\e647"; }
.icon-brush:before { content: "\e621"; }